<%= @link.user.username %>
<%= @link.title %>
<%= @link.url %>

<%= link_to "Edit Link", edit_link_url %>
<%= link_to "Links", links_url %>

<% @link.comments.each do |comment|  %>
  <%= comment.body %>
  <%= button_to "Remove Comment", comment_url(comment), method: :delete %>
<% end  %>


<h2>Add Comment</h2>
<form class="" action="<%= comments_url(@comment)  %>" method="post">
  <input type="hidden" name="comment[link_id]" value="<%= @link.id %>">
  <%= auth_token %>

  <label for="">Comment
    <input type="text" name="comment[body]" value="">
  </label>

  <input type="submit" name="" value="Add Comment">
</form>
